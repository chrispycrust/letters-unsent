generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Letter {
  id          BigInt    @id @default(autoincrement())
  recipient   String? // intended named recipient is optional
  content     String // letter must have content, default String type - text variable unlimited length
  chosenDate  DateTime? @db.Timestamptz() // "timestamp with time zone", includes both date, time, and time zone, no need for precision value so far as I can see
  publishedAt DateTime  @db.Timestamptz()
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime? @map(name: "updated_at")
  flagged     Boolean   @default(false)
  // Flag        Flag?     @relation(fields: [flagId], references: [id])
